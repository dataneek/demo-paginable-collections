@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


@Html.Partial("_Pagination", Model.Customers)
<p>@Html.Partial("_PaginationSummary", Model.Customers)</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Complete Name</th>
            <th>Organization</th>
            <th>Phone Number</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Customers)
        {
            <tr>
                <td>@t.ItemNumber</td>
                <td>@t.Item.LastName, @t.Item.FirstName</td>
                <td>@t.Item.OrganizationName</td>
                <td>@t.Item.PhoneNumber</td>
                <td>@t.Item.Email</td>
            </tr>
        }
    </tbody>
</table>


@Html.Partial("_Pagination", Model.Customers)